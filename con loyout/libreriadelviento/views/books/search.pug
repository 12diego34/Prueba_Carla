extends ../index

block content
    title busqueda
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='icon', type="image/svg", href='/img/logo.svg', color="#ff851b")
        link(rel='stylesheet', href='../mac/css/bootstrap.min.css')
        link(rel='stylesheet', href='../mac/css/styles.css')
        link(href='https://fonts.googleapis.com/css?family=Special+Elite' rel='stylesheet' type='text/css')
        script(src="https://code.jquery.com/jquery-2.1.1.min.js")
        script(src="../mac/js/bootstrap.min.js")
        script(src="../mac/js/jquery.bsAlerts.min.js")
    div(ng-controller="SearchBookController")
        div(class="col-xs-10 col-xs-offset-1 col-lg-4 col-lg-offset-4")
            .container-fluid
                div(data-alerts="alerts")
            form(id="search-form", ng-submit="sendForm()")
                .form-group.text-center
                    label(for="search_term") #[h4 Ingresa el libro que se te cante]
                    input(id='search_term', name='search_term', type='text', 
                            placeholder='Ejemplo: Don quijote', ng-model="form.search_term", class="form-control custom-input", valor="form.search_term", required="")
            div(ng-show="buscando" ng-cloak)
                .buscando
                    .logo
                    img(src='../img/logo.png', alt='')
                    h4 Espere unos segundos...
        include results.pug

    

block scripts
    script.
        $(".fav-btn").bind('click', function(){
            var id = $(this).data('id');
            $.ajax({
                url: '/books/save/' + id,
                type: 'post'
            }).done(function(data){
                console.log("succeed!");
                window.location.assign('/');
            }).fail(function(error){
                console.log("error!", error.responseText);
            });
        });